@article{DEJONG201525,
title = {Sustainable–smart–resilient–low carbon–eco–knowledge cities; making sense of a multitude of concepts promoting sustainable urbanization},
journal = {Journal of Cleaner Production},
volume = {109},
pages = {25-38},
year = {2015},
