@incollection{SHVEDENKO2024485,
title = {Chapter 20 - Smart spaces and ensuring their information security},
editor = {Zhihan Lyu},
booktitle = {Smart Spaces},
publisher = {Academic Press},
pages = {485-506},
year = {2024},
series = {Intelligent Data-Centric Systems},
isbn = {978-0-443-13462-3},
doi = {https://doi.org/10.1016/B978-0-443-13462-3.00021-2},
url = {https://www.sciencedirect.com/science/article/pii/B9780443134623000212},
author = {Vladimir N. Shvedenko and Oleg Shchekochikhin and Dmitriy Alexeev},
keywords = {Smart space, Information security, Smart space architecture, Data protection, Information security system, Information system, Computer system, Behavioral model, Reference model},
abstract = {Smart spaces are supported by a variety of cyber-physical systems and services that collect, deliver, store, and primarily process data, and that extract knowledge and generate managerial impacts. The viability of these services can be subject to the destructive effects of various kinds of negative factors. In this regard, the problem of protecting the smart space from threats in the information sphere becomes relevant. One of the ways to identify destructive impacts on smart space services is to monitor software and hardware parts of the information environment. Monitoring the state of the information environment of the smart space will ensure the vitality (health) of its services. In this chapter we propose a methodology aimed at the timely detection of hazards in the information environment to support the functioning of the smart space. The methodology is based on periodic monitoring of the main software and hardware characteristics of its components. It is experimentally shown that such characteristics are the number of bytes sent and received through the network adapter, the percentage of processor load, the operating time of the computer medium, and the bytes of RAM used. Monitoring and processing these data are sufficient to detect most information security threats. Health control is implemented using artificial intelligence methods by clustering time series and predicting the state of the processes occurring in the hardware and software parts of the computer system. The previously mentioned characteristics are selected in such a way as to reflect the state of the smart space in the most informative way. Processes are evaluated by analyzing the time series of information flows by finding the most similar sample. The sample search is based on the Holt-Winters model. The basic idea of the model is that history develops in a spiral, and the stages are repeated, but with changing properties. If there is seasonality in the time series and a sufficiently large amount of available data, the model is likely to find two intervals, expressed by the formula, that are maximally similar to each other. We propose an original model of smart space information security with three levels of control: reactive, active, and proactive. The analysis of the current state of the space in the model is carried out by indirect signs, both the information data flows of the space and the functional characteristics of the security system. In order to assess the state of the space and the hidden, not explicit, patterns of its behavior, in addition to the basic methods of data analysis we propose to apply the characteristics of the rate of change of the data in the flow, as well as their acceleration. The information system uses three models of behavior in the construction of the information security model of the smart space. The proposed methodology is implemented in a software product that issues appropriate signals to decision centers to prevent information threats to the smart space.}
}
