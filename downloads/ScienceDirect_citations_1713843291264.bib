isbn = {978-0-12-812461-1},
doi = {https://doi.org/10.1016/B978-0-12-812461-1.00008-3},
url = {https://www.sciencedirect.com/science/article/pii/B9780128124611000083},
author = {Shady Attia},
keywords = {Smart buildings, demand response, energy flexible buildings, distribution networks, micro grids, energy management, hydrogen grid},
abstract = {Upscaling Net Zero Energy Buildings (NZEB) requires a transformation in the way we generate and supply energy for power and heat. In order to upscale NZEB and get the greatest economic, environmental, and social benefits out of them, we must reinvent energy grids and encourage the interaction between them and facilities. Therefore, the aim of this chapter is to investigate the implications of upscaling NZEB and share best practices and future perspectives on the users’ grid interaction. In this chapter, we provide guidance to energy companies, consumers, energy service providers, and experts with a general interest on key factors that will lead to successful energy transition and widespread use of NZEB on urban, city, and national scales. There are the three key factors to a successful energy transition and widespread use NZEB: (1) Designing and operating NZEB as smart buildings, (2) transforming the current grid into smart interactive grids with connected and autonomous micro grids, and (3) decarbonizing the power grids. The chapter provides an overview on specifications and best practices to incorporate sensing technology to monitor the state of the grid, make use of distributed renewable energy generation, and use information technology for collaborative interactions between energy providers and energy consumers. We discuss the means of monitoring a reliable and flexible infrastructure that can meet future demand growth and achieve users’ economic and environmental benefits to help upscaling NZEB. Finally, we share some lessons learned to achieve smart and decarbonized grids by taking into account mobility, energy security, and spatial planning.}
}
@article{LI2023107123,
title = {Evaluating real-time control of stormwater drainage network and green stormwater infrastructure for enhancing flooding resilience under future rainfall projections},
