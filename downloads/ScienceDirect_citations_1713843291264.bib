url = {https://www.sciencedirect.com/science/article/pii/B9780323983525000197},
author = {H.R. Deekshetha and Amit Kumar Tyagi},
keywords = {AI, Big data, Intelligent systems, ML, Smart devices},
abstract = {The development of artificial intelligence (AI) systems is fraught with difficulties. These include limited resources, a lack of field expertise, practicality, and a slew of other technological issues stand in the way of constructing AI. AI is being used in the area of human activity modeling. Artificial intelligence systems refer to a computer system's capacity to carry out activities that are essential to human intelligence, such as logical reasoning and task learning. An AI challenge is any job for which the solution method necessary to solve the problem is unknown in advance or for which the data are lacking. If the activity of a system or program carrying out activities to accomplish a problem is comparable to the outcome of a human completing the same task, it is characterized as AI. As a result, AI can refer to a variety of software tools, such as text recognition systems, automated design, self-training programs, etc., not just because of this, but also because they follow the same concepts and regulations as humans. In AI research, there are two primary potential paths. The first is to get AI systems closer to human thinking concepts. The second is to build AI, which entails combining previously created AI components into a single system that can solve human issues. Artificial intelligence research and development is becoming increasingly ubiquitous, and the findings are being used at scale in real-world applications. Automated technologies are increasingly being used in digital education or e-learning to provide additional help for decision makers in decision-making processes. Current research has greatly expanded our understanding of artificial intelligence, but less work has been done on how it may be used for online education. The number of applications in this sector remains small, but it is expected to grow in the coming years. Furthermore, significant research and many problems must be solved in order to bring the technological, social, educational, and ethical viewpoints of these intelligent systems together.}
}
@article{XIE2021102804,
title = {Does historical data still count? Exploring the applicability of smart building applications in the post-pandemic period},
journal = {Sustainable Cities and Society},
volume = {69},
pages = {102804},
year = {2021},
issn = {2210-6707},
doi = {https://doi.org/10.1016/j.scs.2021.102804},
url = {https://www.sciencedirect.com/science/article/pii/S2210670721000949},
author = {Xiang Xie and Qiuchen Lu and Manuel Herrera and Qiaojun Yu and Ajith Kumar Parlikad and Jennifer Mary Schooling},
keywords = {Post-pandemic, Smart building, Historical data, Machine learning},
abstract = {The emergence of COVID-19 pandemic is causing tremendous impact on our daily lives, including the way people interact with buildings. Leveraging the advances in machine learning and other supporting digital technologies, recent attempts have been sought to establish exciting smart building applications that facilitates better facility management and higher energy efficiency. However, relying on the historical data collected prior to the pandemic, the resulting smart building applications are not necessarily effective under the current ever-changing situation due to the drifts of data distribution. This paper investigates the bidirectional interaction between human and buildings that leads to dramatic change of building performance data distributions post-pandemic, and evaluates the applicability of typical facility management and energy management applications against these changes. According to the evaluation, this paper recommends three mitigation measures to rescue the applications and embedded machine learning algorithms from the data inconsistency issue in the post-pandemic era. Among these measures, incorporating occupancy and behavioural parameters as independent variables in machine learning algorithms is highlighted. Taking a Bayesian perspective, the value of data is exploited, historical or recent, pre- and post-pandemic, under a people-focused view.}
}
@article{GARDINER2015405,
title = {Stress Management and Relaxation Techniques use among underserved inpatients in an inner city hospital},
journal = {Complementary Therapies in Medicine},
volume = {23},
number = {3},
pages = {405-412},
year = {2015},
issn = {0965-2299},
doi = {https://doi.org/10.1016/j.ctim.2015.03.006},
url = {https://www.sciencedirect.com/science/article/pii/S0965229915000394},
author = {Paula Gardiner and Ekaterina Sadikova and Amanda C. Filippelli and Suzanne Mitchell and Laura F. White and Robert Saper and Ted J. Kaptchuk and Brian W. Jack and Lisa Fredman},
keywords = {Health literacy, Complementary and alternative medicine, Relaxation therapy, Stress management},
abstract = {Summary
Objective
Little is known about the use of Stress Management and Relaxation Techniques (SMART) in racially diverse inpatients. We hope to identify socioeconomic status (SES) factors, health behavior factors, and clinical factors associated with the use of SMART.
Design and main outcome measures
We conducted a secondary analysis of baseline data from 623 hospitalized patients enrolled in the Re-Engineered Discharge (RED) clinical trial. We assessed socio-demographic characteristics and use of SMART. We used bivariate and multivariate logistic regression to test the association of SMART with socio-demographic characteristics, health behaviors, and clinical factors.
Results
A total of 26.6% of participants reported using SMART and 23.6% used mind body techniques. Thirty six percent of work disabled patients, 39% of illicit drug users, and 38% of participants with depressive symptoms used SMART. Patients who both reported illicit drug use and screened positive for depression had significantly increased odds of using SMART [OR=4.94, 95% CI (1.59, 15.13)]. Compared to non-Hispanic whites, non-Hispanic blacks [0.55 (0.34–0.87)] and Hispanic/other race individuals [0.40 (0.20–0.76)] were less likely to use SMART.
Conclusions
We found greater utilization of SMART among all racial groups compared to previous national studies. In the inner city inpatient setting, patients with depression, illicit drug use, and work disability reported higher rates of using SMART.}
}
