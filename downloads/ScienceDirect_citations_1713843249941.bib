@article{SHI2023133598,
title = {Wearable battery-free smart bandage with peptide functionalized biosensors based on MXene for bacterial wound infection detection},
journal = {Sensors and Actuators B: Chemical},
volume = {383},
pages = {133598},
year = {2023},
issn = {0925-4005},
