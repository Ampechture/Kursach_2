@article{CHOUDHARY2022108569,
title = {Satisfaction and effectiveness of tele-medicine in follow-up of people with epilepsy in a resource-poor setting during COVID-19},
journal = {Epilepsy & Behavior},
volume = {128},
pages = {108569},
year = {2022},
issn = {1525-5050},
