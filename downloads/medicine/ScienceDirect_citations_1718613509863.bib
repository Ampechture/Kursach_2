@article{XIONG2023100907,
title = {The use of Chinese herbal medicines throughout the pregnancy life course and their safety profiles: a population-based cohort study},
journal = {American Journal of Obstetrics & Gynecology MFM},
volume = {5},
number = {5},
pages = {100907},
year = {2023},
