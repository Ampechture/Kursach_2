@article{CARMONAPUERTA2024,
title = {Associated factors with the occurrence of in-hospital cardiac arrest in patients admitted to internal medicine wards for non-cardiovascular causes},
journal = {Medicina Clínica (English Edition)},
year = {2024},
issn = {2387-0206},
doi = {https://doi.org/10.1016/j.medcle.2024.01.010},
