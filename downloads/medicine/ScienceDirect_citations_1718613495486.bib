@article{YE2024117601,
title = {Traditional Chinese medicine for insomnia: Recommendation mapping of the global clinical guidelines},
journal = {Journal of Ethnopharmacology},
volume = {322},
pages = {117601},
year = {2024},
issn = {0378-8741},
doi = {https://doi.org/10.1016/j.jep.2023.117601},
