@article{MISRA2023836,
title = {The case for precision medicine in the prevention, diagnosis, and treatment of cardiometabolic diseases in low-income and middle-income countries},
journal = {The Lancet Diabetes & Endocrinology},
volume = {11},
number = {11},
pages = {836-847},
