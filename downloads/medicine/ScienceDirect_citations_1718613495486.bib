@article{SHAN2024155623,
title = {Detoxification and underlying mechanisms towards toxic alkaloids by Traditional Chinese Medicine processing: A comprehensive review},
journal = {Phytomedicine},
volume = {129},
pages = {155623},
year = {2024},
issn = {0944-7113},
doi = {https://doi.org/10.1016/j.phymed.2024.155623},
url = {https://www.sciencedirect.com/science/article/pii/S0944711324002824},
