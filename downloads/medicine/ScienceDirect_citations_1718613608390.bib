@article{WAGNER20235952,
title = {A Phase 2 Study with Volasertib for Ven-HMA Relapsed/Refractory Acute Myeloid Leukemia Patients Guided By a Predictive Precision Medicine Platform},
journal = {Blood},
volume = {142},
pages = {5952},
year = {2023},
note = {65th ASH Annual Meeting Abstracts},
issn = {0006-4971},
