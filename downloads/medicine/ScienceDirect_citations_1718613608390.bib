@article{YAMARIK2023e296,
title = {Engaging Seriously Ill and Vulnerable Older Adults in a Nurse-Led Telephonic Intervention: The Emergency Medicine Palliative Care Access (EMPallA) Trial (SA305A)},
journal = {Journal of Pain and Symptom Management},
volume = {65},
number = {3},
