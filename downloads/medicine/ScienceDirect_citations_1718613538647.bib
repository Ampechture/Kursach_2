@article{JIMENEZGRANERO2023249,
title = {Completion of the informed consent in radioguided surgery by the General Surgery and Nuclear Medicine services of a radioguided surgery unit},
journal = {Revista Española de Medicina Nuclear e Imagen Molecular (English Edition)},
volume = {42},
number = {4},
pages = {249-254},
year = {2023},
