@article{MASTERS2024e676,
title = {Beyond the Labs: Need for Primary Palliative Medicine Training in an Internal Medicine Residency},
journal = {Journal of Pain and Symptom Management},
volume = {67},
number = {5},
pages = {e676},
year = {2024},
issn = {0885-3924},
doi = {https://doi.org/10.1016/j.jpainsymman.2024.02.137},
url = {https://www.sciencedirect.com/science/article/pii/S0885392424002203},
author = {Katie Masters and Zeba Anwar},
abstract = {Outcomes
1. Understand the need for formalized curriculum for palliative medicine elective. 2. Apply skills related to conducting family meetings and being familiar with signs and symptoms at end of life.
Key Message
With an expanding geriatric population, principles of Palliative Medicine are becoming an integral part of Primary Care education. A survey was conducted to help understand how confidence levels with primary Palliative topics (addressing code status, conducting family meetings, and providing end-of-life symptom management) were perceived within an urban, community hospital Internal Medicine Program.
Introduction
Internal Medicine residents benefit from being able to provide primary palliative care to their patients.
Objectives
Assess Internal Medicine Residents confidence levels in addressing code status, leading family meetings, and providing end-of-life symptom management.
Methods
An anonymous survey was conducted at an urban, community-based hospital in which questions regarding Primary Palliative Medicine were asked of IM residents in PGY1, 2, and 3.
Results
The survey was completed by 14 IM residents (58% response rate). Of those 14 residents, 11 had not had a Palliative Medicine rotation during residency. Residents’ confidence level with addressing code status included 5 extremely, 2 very, 6 somewhat and 1 not so confident. No resident felt extremely confident in leading family meetings, though 5 felt very confident, 5 were somewhat confident, 3 not so, and 1 not at all. For symptom management, only 1 felt extremely confident, 5 felt very, 6 somewhat, and 1 not so confident.
Conclusion
Survey results reveal that IM residents within an urban, community-based hospital are least confident in leading family meetings and providing end-of-life symptom management. Beginning academic year 2023-24, PGY2 IM residents will have a mandatory 2-week Palliative Medicine rotation. Following the changes in curriculum, another survey will be sent out at the end of this academic year to reassess confidence. Since the Palliative team actively works with Psychiatry and Family Medicine residents, future directions would include inviting their participation in this study as well.
Keywords
Quality Improvement; Managing Suffering and Distress}
}
@article{YAN2023108494,
title = {Graph-based medicine embedding learning via multiple attentions},
