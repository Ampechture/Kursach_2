@article{STENGEL2023S2,
title = {Large-scale, pragmatic randomized trials in the era of big data, precision medicine and machine learning. Valid and necessary, or outdated and a waste of resources?},
journal = {Injury},
volume = {54},
pages = {S2-S9},
year = {2023},
note = {AOTrauma Europe Supplement: Clinical Research: Lessons Learned-Looking Ahead},
issn = {0020-1383},
