@article{LI2022102841,
title = {A randomized, placebo-controlled, double-blind trial to evaluate efficacy and safety of Shen-Yuan-Dan capsules, a traditional Chinese medicine, for treatment of peri-procedure myocardial injury following percutaneous coronary intervention},
