@article{SCHOOT2022146,
title = {Market access to new anticancer medicines for children and adolescents with cancer in Europe},
journal = {European Journal of Cancer},
volume = {165},
pages = {146-153},
year = {2022},
issn = {0959-8049},
doi = {https://doi.org/10.1016/j.ejca.2022.01.034},
