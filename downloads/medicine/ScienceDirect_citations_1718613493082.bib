@article{DOTTERSKATZ2024101404,
title = {Cracking the Code: Interpreting Content and Phrases Used in Maternal-Fetal Medicine Fellowship Letters of Recommendation},
journal = {American Journal of Obstetrics & Gynecology MFM},
pages = {101404},
year = {2024},
issn = {2589-9333},
