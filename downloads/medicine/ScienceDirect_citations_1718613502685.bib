url = {https://www.sciencedirect.com/science/article/pii/S0085253824000681},
author = {Anna Reznichenko and Viji Nair and Sean Eddy and Damian Fermin and Mark Tomilo and Timothy Slidel and Wenjun Ju and Ian Henry and Shawn S. Badal and Johnna D. Wesley and John T. Liles and Sven Moosmang and Julie M. Williams and Carol Moreno Quinn and Markus Bitzer and Jeffrey B. Hodgin and Laura Barisoni and Anil Karihaloo and Matthew D. Breyer and Kevin L. Duffin and Uptal D. Patel and Maria Chiara Magnone and Ratan Bhat and Matthias Kretzler},
