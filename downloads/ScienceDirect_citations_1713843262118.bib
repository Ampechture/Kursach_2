journal = {Nano Energy},
volume = {121},
pages = {109224},
year = {2024},
issn = {2211-2855},
doi = {https://doi.org/10.1016/j.nanoen.2023.109224},
url = {https://www.sciencedirect.com/science/article/pii/S2211285523010613},
author = {Fuhao Jiang and Shuwen Zheng and Benliang Hou and Xuhao Wang and Fenglin Sun and Shilin Wang and Sang Woo Joo and Chenhao Cong and Se Hyun Kim and Xinlin Li},
keywords = {Triboelectric nanogenerator, Energy device, Self-powered device, Printed electronics, Smart wearable system},
abstract = {The relentless advancement in nanomaterials and their concomitant micro- and nanoelectronic device technologies have engendered profound transformations within the domains of information technology, energy systems, and biomedicine. This progression is galvanizing the imminent realization of large-scale production for wearable, sustainable, and autonomously functional micro-nano-electronic systems. Amongst these novel technologies, Triboelectric Nanogenerators (TENGs) have emerged as a pivotal avenue for harnessing mechanical energy with remarkable energy conversion efficiency, compact device dimensions, robust longevity, and intrinsic compatibility with wearables and implantables. Such attributes render them highly promising for integration into micro-nano-systems. Despite the notable strides witnessed in the domain of friction nanomotors over the past decade, a formidable technical hurdle persists concerning their seamless integration with printed electronics and self-powered systems. This article undertakes a comprehensive critique of the research progression pertaining to printed TENGs employed as energy harvesting units to empower ancillary devices. The authors provide an evaluative overview of recent advances in the field of printed wearable nanomotors, as well as describe advances in printed electronics for the preparation of TENGs, the development of functionally customized e-ink materials for application to TENGs, and synergistic combinations of TENGs as energy harvesting mechanisms in composite device architectures. In conclusion, the discourse culminates with an appraisal of the challenges poised to the functionalization of printed TENGs, while concurrently discerning the latent opportunities that underpin their future trajectory within this dynamic paradigm.}
}
@article{HYDERCHOHAN2022101628,
title = {Development of smart application for house condition survey},
journal = {Ain Shams Engineering Journal},
volume = {13},
