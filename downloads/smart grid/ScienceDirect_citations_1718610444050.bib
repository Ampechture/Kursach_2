volume = {77},
pages = {210-217},
year = {2024},
note = {Horizons of Railway Transport (HRT 2023)},
issn = {2352-1465},
doi = {https://doi.org/10.1016/j.trpro.2024.01.028},
url = {https://www.sciencedirect.com/science/article/pii/S2352146524000280},
author = {Oliver Bubelíny and Milan Kubina and Michal Varmus},
keywords = {Smart City, Smart mobility, public transport, city management},
abstract = {A smart city is a term occurring more and more often at the level of city management. The constant development of information and communication technologies (ICTs) also provides municipal governments with opportunities to use them in their day-to-day activities. Involvement of these means in city management brings numerous benefits for the municipality and residents related to a better traffic situation, faster public administration, and generally lower ecological impacts. The mobility of Slovak cities experiences several problems associated with the limitation of infrastructure and the significant predominance of individual transport. Consequently, the occurrence of traffic jams and collision situations is becoming more and more frequent. Smart mobility brings an approach a city should adopt towards traffic management, utilizing the ICTs, while making it easier for residents and visitors to move around the city and travelling the “last mile”. The aim of the article is to describe the development of building smart mobility in the Slovak city of Žilina. Based on the identified development, subsequently, the aim is also to introduce other possibilities for improving mobility in the city, using smart elements.}
}
@article{LI2024100743,
title = {Smart city VR landscape planning and user virtual entertainment experience based on artificial intelligence},
