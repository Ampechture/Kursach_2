 journal = {Information Fusion},
 keywords = {Information fusion, Smart city, Urban, Transportation, Public safety, Machine learning, Deep learning},
 pages = {102317},
 title = {Comprehensive systematic review of information fusion methods in smart cities and urban environments},
 url = {https://www.sciencedirect.com/science/article/pii/S1566253524000952},
 volume = {107},
 year = {2024}
}

