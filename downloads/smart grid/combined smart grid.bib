 doi = {https://doi.org/10.1016/j.aei.2024.102485},
 issn = {1474-0346},
 journal = {Advanced Engineering Informatics},
 keywords = {Digital twins, Urban drainage systems, Smart stormwater management, Artificial intelligence, Sensor technology, Smart city},
 pages = {102485},
 title = {Application of artificial intelligence in digital twin models for stormwater infrastructure systems in smart cities},
 url = {https://www.sciencedirect.com/science/article/pii/S1474034624001332},
 volume = {61},
