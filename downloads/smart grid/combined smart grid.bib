 isbn = {978-0-323-85552-5},
 keywords = {Climate change, Mitigation, Emissions, Smart city, Smart technology},
 pages = {93-116},
 publisher = {Elsevier},
 title = {Chapter 5 - Smart city solutions and climate change mitigation: An overview},
 url = {https://www.sciencedirect.com/science/article/pii/B9780323855525000178},
 year = {2023}
}

