 issn = {2210-6707},
 journal = {Sustainable Cities and Society},
 keywords = {Subway synergism hub, Smart city, Microgrid, Directed acyclic graph, IPS algorithm},
 pages = {105446},
 title = {Enhancing smart city operation management: Integrating energy systems with a subway synergism hub},
 url = {https://www.sciencedirect.com/science/article/pii/S2210670724002749},
 volume = {107},
 year = {2024}
}

