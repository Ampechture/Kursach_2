 issn = {2352-801X},
 journal = {Groundwater for Sustainable Development},
 keywords = {Smart cities, Wastewater collection, Divide-and-conquer (DAC), Variable neighborhood search (VNS), Sustainability, Urban infrastructure, Environmental efficiency, Ground water},
 pages = {101091},
 title = {An efficient wastewater collection model for groundwater resource protection in smart cities},
 url = {https://www.sciencedirect.com/science/article/pii/S2352801X24000146},
 volume = {25},
 year = {2024}
}

