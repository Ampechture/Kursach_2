 journal = {Journal of Business Research},
 keywords = {Innovation networks for social impact, Business and socio-political actors, Smart city, Opportunity},
 pages = {325-337},
 title = {Innovation networks for social impact: An empirical study on multi-actor collaboration in projects for smart cities},
