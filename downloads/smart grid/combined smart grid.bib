 issn = {0959-6526},
 journal = {Journal of Cleaner Production},
 keywords = {Smart city, Green city, ESG, City greenness, City smartness, Smart green city},
 pages = {137315},
 title = {Theoretical and analytical assessment of smart green cities},
 url = {https://www.sciencedirect.com/science/article/pii/S0959652623014737},
 volume = {410},
 year = {2023}
}

