 keywords = {Neighbourhood, Smart city, Smart city dimensions, Assessment tools, Urban development},
 pages = {102963},
 title = {A global-scale review of smart city practice and research focusing on residential neighbourhoods},
 url = {https://www.sciencedirect.com/science/article/pii/S0197397523002230},
 volume = {142},
 year = {2023}
}

