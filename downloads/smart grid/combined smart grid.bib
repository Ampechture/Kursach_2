 keywords = {Smart cities, e-Government, Twitter, Web scraping, Social media listening, We-government},
 note = {The City 2.0 - Smart People, Places, Planning},
 number = {2},
 pages = {153-165},
 title = {Smart cities and citizen engagement: Evidence from Twitter data analysis on Italian municipalities},
 url = {https://www.sciencedirect.com/science/article/pii/S2226585622000206},
 volume = {11},
