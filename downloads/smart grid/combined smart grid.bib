 journal = {Sustainable Energy Technologies and Assessments},
 keywords = {SGCS, Deep Learning (DL) Framework, Cyber-Physical Digital Twin, Social Science, Cybersecurity Enhancement},
 pages = {103650},
 title = {A hybrid evolutionary and machine learning approach for smart city planning: Digital twin approach},
 url = {https://www.sciencedirect.com/science/article/pii/S2213138824000468},
 volume = {64},
 year = {2024}
