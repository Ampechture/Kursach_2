url = {https://www.sciencedirect.com/science/article/pii/B9780323919401000116},
author = {Wendy Wuyts and Lizhen Huang},
keywords = {Biological sex, digital twins, ethical concerns, gender mainstreaming, intersectionality analysis},
abstract = {More awareness as a result of evidence from historical analyses of innovation projects in different domains led to more calls and requirements by funders such as the European Commission to integrate a gender dimension in research, development, and innovation projects. This perspective is the fruit of anticipating research into what could be the gender dimension in smart forestry and agriculture projects, embedding digital twins (DTs) and drones. Although operational rules, guiding questions, and plans on gender dimension are established for domains such as health and machine translation, evidence from historical analyses of gendered innovations in smart forestry and agriculture, as well as frameworks for future designs and research, is fragmented. Therefore, this chapter is informed by a critical literature analysis, where I delved into different fields that intersect smart forestry, agriculture, and rural impacts and asked critical questions – by email and short virtual roundtables – to various domain experts within the Horizon Europe project SPADE. This chapter provides a short overview of definitions, operational rules, and recommendations that are relevant for different work packages in the Horizon Europe project SPADE. It is tailored for drone and DT engineers, operators, and researchers in smart forestry and agriculture. This perspective presents the framework we used in virtual roundtables during consortium and work package meetings in the first phase of the project.}
}
@article{SHARMA2024122988,
title = {Game on! A state-of-the-art overview of doing business with gamification},
journal = {Technological Forecasting and Social Change},
volume = {198},
pages = {122988},
year = {2024},
issn = {0040-1625},
doi = {https://doi.org/10.1016/j.techfore.2023.122988},
url = {https://www.sciencedirect.com/science/article/pii/S004016252300673X},
author = {Wamika Sharma and Weng Marc Lim and Satish Kumar and Aastha Verma and Rajeev Kumra},
keywords = {Business, Gamification, Bibliometric analysis, Review},
abstract = {Gamification is the act of applying game-design elements to transform activities, products, services, and systems in a way that provides the kind of experiences similar to those offered by games. These elements include badges, points, and leaderboards to motivate and reward problem solving activities and processes. Both businesses and business researchers are increasingly interested in the application of gamification. In this regard, this review aims to offer a state-of-the-art overview of gamification in business, revealing its current trends and future directions. Using business research on gamification published in the last decade (2012–2022) found on Scopus and Web of Science, we conduct a performance analysis to illuminate the field's performance (publication productivity and impact) alongside its key contributors (journals, authors, and countries) as well as a science mapping using a co-citation analysis to locate knowledge foundations, and bibliographic coupling and keyword co-occurrence analysis to reveal major themes in business gamification. Our exploration has unearthed gamification's pervasive influence across business domains, from enhancing learning and fostering innovation to empowering marketing strategies and catalyzing transformation. Gamification has also made significant inroads into management practices, driving engagement, influencing behavioral outcomes, and ushering sustainability. Peering into the future, our density-centrality quadrant analysis casts light on emerging frontiers. Noteworthily, we expect the next wave of gamification to be shaped by the allure of video games and the metaverse, bespoke industry-specific designs, confluence with e-commerce trends, emphasis on sustainable development, expanded social responsibilities, innovations in virtual reality, intersections with human urbanism, and the rise of smart cities. As gamification continues to integrate and reshape myriad facets of the business world, it holds the promise of not only enriching current practices but also charting the course for the future of innovative, sustainable, and transformative business strategies.}
}
