journal = {Transportation Research Procedia},
volume = {63},
pages = {2243-2250},
year = {2022},
note = {X International Scientific Siberian Transport Forum — TransSiberia 2022},
issn = {2352-1465},
doi = {https://doi.org/10.1016/j.trpro.2022.06.254},
url = {https://www.sciencedirect.com/science/article/pii/S2352146522005099},
author = {Maksim Кalynychenko and Alexey Stepanov and Halina Shmarlouskaya and Tatiana Egorushkina and Oksana Mishchuk and Sergey Judin and Dmitriy Boroukhin},
keywords = {smart urban transport, smart organization, smart city, smart factor, economic, mathematical modeling, production factors, harmonization of interaction},
abstract = {Based on the modified production function, economic and mathematical modeling of production factors was carried out in the conditions of the development of a smart transport organization (Municipal public enterprise «Tulgorelektrotrans») and a smart city. The trends and methods of interaction between a smart organization and a smart city are proposed for the transformation of the digital economy of the city and the implementation of the goals of harmonious development. The existing scientific and methodological approaches to simulating the digital development of economic systems are systematized. On the basis of the modified production function, the substantiation of qualitative and quantitative changes in production factors for the smart city of Tula and smart organizations, taking into account the "digital" factor, is carried out. Formal dependencies made it possible to conduct a numerical assessment of the "smart" factor in the production of its own volume of shipped goods, completed works and services (for the city of Tula as a whole and for certain types of economic activity). The marginal rate of substitution by the smart labor factor was 2.28, and capital – 0.66.}
}
@article{ANTHOPOULOS2022103660,
