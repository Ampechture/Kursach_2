@article{ARTMANN201910,
title = {How smart growth and green infrastructure can mutually support each other — A conceptual framework for compact and green cities},
journal = {Ecological Indicators},
volume = {96},
pages = {10-22},
year = {2019},
note = {From urban sprawl to compact green cities – indicators for multi-scale and multi-dimensional analysis},
issn = {1470-160X},
