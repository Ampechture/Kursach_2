@article{BUILGIL2023107770,
title = {The digital harms of smart home devices: A systematic literature review},
journal = {Computers in Human Behavior},
volume = {145},
pages = {107770},
year = {2023},
issn = {0747-5632},
doi = {https://doi.org/10.1016/j.chb.2023.107770},
url = {https://www.sciencedirect.com/science/article/pii/S0747563223001218},
author = {David Buil-Gil and Steven Kemp and Stefanie Kuenzel and Lynne Coventry and Sameh Zakhary and Daniel Tilley and James Nicholson},
keywords = {Internet of things, Cybercrime, Hacking, Privacy, Smart readers, Security},
abstract = {The connection of home electronic devices to the internet allows remote control of physical devices and involves the collection of large volumes of data. With the increase in the uptake of Internet-of-Things home devices, it becomes critical to understand the digital harms of smart homes. We present a systematic literature review on the security and privacy harms of smart homes. PRISMA methodology is used to systematically review 63 studies published between January 2011 and October 2021; and a review of known cases is undertaken to illustrate the literature review findings with real-world scenarios. Published literature identifies that smart homes may pose threats to confidentiality (unwanted release of information), authentication (sensing information being falsified) and unauthorised access to system controls. Most existing studies focus on privacy intrusions as a prevalent form of harm against smart homes. Other types of harms that are less common in the literature include hacking, malware and DoS attacks. Digital harms, and data associated with these harms, may vary extensively across smart devices. Most studies propose technical measures to mitigate digital harms, while fewer consider social prevention mechanisms. We also identify salient gaps in research, and argue that these should be addressed in future crossdisciplinary research initiatives.}
}
@article{LI2024104875,
title = {Will urban shrinkage affect the level of basic public services supply?—The empirical evidence from 298 prefecture-level cities in China},
journal = {Cities},
volume = {149},
pages = {104875},
year = {2024},
issn = {0264-2751},
doi = {https://doi.org/10.1016/j.cities.2024.104875},
url = {https://www.sciencedirect.com/science/article/pii/S0264275124000891},
author = {Guoqiang Li and Lei Feng and Xiao Zhang and Jingnan Hu and Yiqiu Liang},
keywords = {Urban shrinkage, Basic public services supply, Regional heterogeneity, Smart shrinkage},
abstract = {In recent years, urban shrinkage, as one of the phenomena revealed in the process of new urbanisation development in China, has gradually attracted the attention of many scholars. To address the question of whether urban shrinkage has an impact on the level of local basic public services supply, this paper uses panel data from 298 prefecture-level cities in China from 2010 to 2018 to empirically analyse the impact of urban shrinkage on the level of basic public services supply by dividing shrinking cities into different regions and dividing basic public services into different dimensions. The results show that the impact of urban shrinkage on the supply level of basic public services is an ‘inverted U-shaped’ non-linear process that first promotes and then inhibits the level of basic public services supply; the impact of urban shrinkage on various dimensions of the level of basic public services supply varies, and generally shows a positive and then negative trend. Regarding regional heterogeneity, urban shrinkage has a more significant negative impact on the central region's basic public services supply level, followed by the western region and, to a lesser extent, the northeastern region. Therefore, local governments should make Smart Shrinkage according to local conditions, improve the basic public services supply system to enhance residents' happiness and satisfaction, introduce corresponding policies for the introduction of talents and focus on employee training and education activities to achieve the goal of equalising of basic public services supply in China. This research could also provide identification methods and improvement measures for other countries and regions just beginning to face the shrinking problem, especially those with high population densities and tight urban connectivity, such as China's cities.}
}
@article{BUYUKOZKAN2024141572,
title = {Integrated design framework for smart agriculture: Bridging the gap between digitalization and sustainability},
journal = {Journal of Cleaner Production},
