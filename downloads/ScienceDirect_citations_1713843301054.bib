keywords = {Urban overheating, urban heat mitigation, urban heat adaptation, heat vulnerability, monitoring, modeling, policy, heatwaves, urban design, green infrastructure, urban materials, heat balance, urban albedo, transpiration, evaporation, radiation, heat sinks, climate action plans, extreme heat, health, remote sensing, urban morphology, urban layout, urban canopy, model coupling, greenery, cool materials, daytime radiative cooling, thermochromic materials, photoluminescence, Covenant of Mayors},
